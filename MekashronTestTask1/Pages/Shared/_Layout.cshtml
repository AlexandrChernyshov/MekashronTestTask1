<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MekashronTestTask1</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/MekashronTestTask1.styles.css" asp-append-version="true" defer/>
    <link rel="preload" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" as="style" onload="this.onload=null;this.rel='stylesheet'" defer>
</head>
<body class="bg-body-secondary">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">MekashronTestTask1</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a href="https://github.com/AlexandrChernyshov/MekashronTestTask1" class="nav-link text-dark d-flex align-items-center" target="_blank" rel="noopener noreferrer">
                                This project on Github
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="https://t.me/alexCqp" class="nav-link text-dark d-flex align-items-center" target="_blank" rel="noopener noreferrer">
                                Telegram
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - MekashronTestTask1 - <a href="mailto:acqp2tl@gmail.com">acqp2tl@gmail.com</a>
        </div>
    </footer>

    <script src="~/js/site.min.js" asp-append-version="true" defer></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>