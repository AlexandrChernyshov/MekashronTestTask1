@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="min-vh-100 d-flex align-items-center py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-8 col-xl-6">
                <!-- Login Card -->
                <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                    <div class="card-body p-4 p-md-5">
                        <div class="text-center mb-4 mb-md-5">
                            <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3 mb-md-4" style="width: 60px; height: 60px;">
                                <i class="bi bi-person-circle fs-2 fs-md-1 text-primary"></i>
                            </div>
                            <h2 class="fw-bold mb-2">Welcome Back</h2>
                            <p class="text-muted mb-0">Sign in to your account</p>
                        </div>

                        <form method="post">
                            <div class="mb-3 mb-md-4">
                                <label for="Input_Username" class="form-label fw-semibold mb-2">
                                    <i class="bi bi-person me-2"></i>Username
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0">
                                        <i class="bi bi-person"></i>
                                    </span>
                                    <input type="text"
                                           class="form-control form-control-lg border-start-0"
                                           id="Input_Username"
                                           name="Input.Username"
                                           value="@Model.Input?.Username"
                                           placeholder="Enter your username"
                                           required>
                                </div>
                            </div>

                            <div class="mb-3 mb-md-4">
                                <label for="Input_Password" class="form-label fw-semibold mb-2">
                                    <i class="bi bi-lock me-2"></i>Password
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0">
                                        <i class="bi bi-lock"></i>
                                    </span>
                                    <input type="password"
                                           class="form-control form-control-lg border-start-0"
                                           id="Input_Password"
                                           name="Input.Password"
                                           placeholder="Enter your password"
                                           required>
                                </div>
                            </div>

                            <div class="d-grid mb-3 mb-md-4">
                                <button type="submit" class="btn btn-primary btn-lg rounded-3 py-3 fw-semibold">
                                    <i class="bi bi-box-arrow-in-right me-2"></i>Sign In
                                </button>
                            </div>

                            <div class="text-center">
                                <small class="text-muted">Need help? <a href="#" class="text-decoration-none">Contact support</a></small>
                            </div>
                        </form>

                        <div asp-validation-summary="ModelOnly" class="alert alert-warning alert-dismissible fade show mt-3 mt-md-4" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>

                        <!-- Success Message -->
                        @if (Model.ResponseStatus == Models.ResponseStatus.Success)
                        {
                            <div class="alert alert-success alert-dismissible fade show mt-3 mt-md-4" role="alert">
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-check-circle-fill me-3 fs-4"></i>
                                    <div>
                                        <div class="fw-bold">Authentication Successful!</div>
                                        <div class="small">Greetings, @Model.CustomerInfoResponse!.FirstName</div>
                                    </div>
                                </div>
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        <!-- Error Messages -->
                        @if (Model.ResponseStatus == Models.ResponseStatus.Error)
                        {
                            <div class="alert alert-danger alert-dismissible fade show mt-3 mt-md-4" role="alert">
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-exclamation-triangle-fill me-3 fs-4"></i>
                                    <div>
                                        <div class="fw-bold">Login Failed</div>
                                        <div class="small">@(Model.CustomerInfoResponse?.ResultMessage ?? Model.ResultMessage)</div>
                                    </div>
                                </div>
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        @if (Model.ResponseStatus == Models.ResponseStatus.InternalError)
                        {
                            <div class="alert alert-danger alert-dismissible fade show mt-3 mt-md-4" role="alert">
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-exclamation-triangle-fill me-3 fs-4"></i>
                                    <div>
                                        <div class="fw-bold">Server Error</div>
                                        <div class="small">Internal server error. Please try again later.</div>
                                    </div>
                                </div>
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Customer Info Accordion -->
        @if (Model.ResponseStatus == Models.ResponseStatus.Success)
        {
            <div class="row mt-4 mt-md-5">
                <div class="col-12">
                    <div class="accordion" id="customerInfoAccordion">
                        <div class="accordion-item border-0 shadow-sm rounded-3">
                            <h3 class="accordion-header" id="customerInfoHeading">
                                <button class="accordion-button bg-white border-0 shadow-none rounded-3 p-3 p-md-4"
                                        type="button"
                                        data-bs-toggle="collapse"
                                        data-bs-target="#customerInfoCollapse"
                                        aria-expanded="true"
                                        aria-controls="customerInfoCollapse">
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-person-badge me-2 me-md-3 text-primary fs-5 fs-md-4"></i>
                                        <span class="h5 mb-0 fw-semibold">User Profile Information</span>
                                    </div>
                                </button>
                            </h3>
                            <div id="customerInfoCollapse"
                                 class="accordion-collapse collapse show"
                                 aria-labelledby="customerInfoHeading"
                                 data-bs-parent="#customerInfoAccordion">
                                <div class="accordion-body p-0">
                                    <div class="card border-0 border-top rounded-0 rounded-bottom-3">
                                        <div class="card-body p-3 p-md-4">
                                            <div class="table-responsive">
                                                <table class="table table-hover align-middle">
                                                    <thead class="table-light">
                                                        <tr>
                                                            <th class="fw-semibold" style="width: 30%;">Field</th>
                                                            <th class="fw-semibold">Value</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <tr>
                                                            <td class="fw-medium"><i class="bi bi-envelope me-2 text-muted"></i>Email</td>
                                                            <td>@Model.CustomerInfoResponse!.Email</td>
                                                        </tr>
                                                        <tr>
                                                            <td class="fw-medium"><i class="bi bi-person me-2 text-muted"></i>First Name</td>
                                                            <td>@Model.CustomerInfoResponse.FirstName</td>
                                                        </tr>
                                                        <tr>
                                                            <td class="fw-medium"><i class="bi bi-person me-2 text-muted"></i>Last Name</td>
                                                            <td>@Model.CustomerInfoResponse.LastName</td>
                                                        </tr>
                                                        <tr>
                                                            <td class="fw-medium"><i class="bi bi-shield me-2 text-muted"></i>Status</td>
                                                            <td>
                                                                @Model.CustomerInfoResponse.Status
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td class="fw-medium"><i class="bi bi-hash me-2 text-muted"></i>Entity ID</td>
                                                            <td><code>@Model.CustomerInfoResponse.EntityId</code></td>
                                                        </tr>
                                                        <tr>
                                                            <td class="fw-medium"><i class="bi bi-building me-2 text-muted"></i>Company</td>
                                                            <td>@Model.CustomerInfoResponse.Company</td>
                                                        </tr>
                                                        <tr>
                                                            <td class="fw-medium"><i class="bi bi-geo-alt me-2 text-muted"></i>Address</td>
                                                            <td>@Model.CustomerInfoResponse.Address</td>
                                                        </tr>
                                                        <tr>
                                                            <td class="fw-medium"><i class="bi bi-geo me-2 text-muted"></i>City</td>
                                                            <td>@Model.CustomerInfoResponse.City</td>
                                                        </tr>
                                                        <tr>
                                                            <td class="fw-medium"><i class="bi bi-globe me-2 text-muted"></i>Country</td>
                                                            <td>@Model.CustomerInfoResponse.Country</td>
                                                        </tr>
                                                        <tr>
                                                            <td class="fw-medium"><i class="bi bi-signpost me-2 text-muted"></i>Zip Code</td>
                                                            <td>@Model.CustomerInfoResponse.Zip</td>
                                                        </tr>
                                                        <tr>
                                                            <td class="fw-medium"><i class="bi bi-telephone me-2 text-muted"></i>Phone</td>
                                                            <td>@Model.CustomerInfoResponse.Phone</td>
                                                        </tr>
                                                        <tr>
                                                            <td class="fw-medium"><i class="bi bi-phone me-2 text-muted"></i>Mobile</td>
                                                            <td>@Model.CustomerInfoResponse.Mobile</td>
                                                        </tr>
                                                        <tr>
                                                            <td class="fw-medium"><i class="bi bi-check-circle me-2 text-muted"></i>Email Confirmed</td>
                                                            <td>
                                                                @(Model.CustomerInfoResponse.EmailConfirm ? "Yes" : "No")
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td class="fw-medium"><i class="bi bi-check-circle me-2 text-muted"></i>Mobile Confirmed</td>
                                                            <td>
                                                                @(Model.CustomerInfoResponse.MobileConfirm ? "Yes" : "No")
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td class="fw-medium"><i class="bi bi-globe-americas me-2 text-muted"></i>Country ID</td>
                                                            <td>@Model.CustomerInfoResponse.CountryID</td>
                                                        </tr>
                                                        <tr>
                                                            <td class="fw-medium"><i class="bi bi-layers me-2 text-muted"></i>LID</td>
                                                            <td>@Model.CustomerInfoResponse.lid</td>
                                                        </tr>
                                                        <tr>
                                                            <td class="fw-medium"><i class="bi bi-hdd-network me-2 text-muted"></i>FTP Host</td>
                                                            <td><code>@Model.CustomerInfoResponse.FTPHost</code></td>
                                                        </tr>
                                                        <tr>
                                                            <td class="fw-medium"><i class="bi bi-hdd-stack me-2 text-muted"></i>FTP Port</td>
                                                            <td><code>@Model.CustomerInfoResponse.FTPPort</code></td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>